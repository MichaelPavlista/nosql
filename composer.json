{
    "name": "hovjacky/nosql",
    "description": "PHP Client for Elasticsearch (MongoDB and Cassandra are almost finished) - easy and unified queries",
    "license": "MIT",
    "keywords": ["nosql","elasticsearch"],
    "homepage": "https://github.com/hovjacky/nosql",
    "authors": [
        {
            "name": "Ondrej Hovjacky",
            "email": "hovjacky.ondrej@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=7.0 <=9",
        "elasticsearch/elasticsearch": "7.13.0",
        "tracy/tracy": "^2.8"
    },
    "autoload": {
        "psr-4": { "Hovjacky\\NoSQL\\": "src" }
    },
    "require-dev": {
        "phpstan/phpstan": "^0.12.88"
    },
    "scripts": {
        "phpstan": "vendor/bin/phpstan analyse -c phpstan.neon",
        "phpstan-local": "php-df vendor/bin/phpstan analyse -c phpstan.neon --memory-limit=99999999999"
    }
}
